<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="sceneDashboard" prefHeight="590.0" prefWidth="845.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schoolmanagementsystem.controller.DashboardController">
   <children>
      <HBox layoutY="1.0" prefHeight="50.0" prefWidth="850.0">
         <children>
            <Button fx:id="studentDash" mnemonicParsing="false" onAction="#switchToStudent" prefHeight="50.0" prefWidth="133.0" text="Students" />
            <Button fx:id="professorDash" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#switchToProfessor" prefHeight="50.0" prefWidth="135.0" text="Professor" />
            <Button fx:id="scheduleDash" layoutX="145.0" layoutY="10.0" mnemonicParsing="false" onAction="#switchToSchedule" prefHeight="50.0" prefWidth="135.0" text="Schedule" />
         </children>
      </HBox>
      <Button fx:id="logoutB" layoutX="15.0" layoutY="535.0" mnemonicParsing="false" onAction="#closeDashboard" prefHeight="45.0" prefWidth="80.0" text="Log out" />
      <Button fx:id="addAcademic" layoutX="210.0" layoutY="535.0" mnemonicParsing="false" onAction="#addAcademicYear" prefHeight="45.0" prefWidth="120.0" text="Add Academic Year" />
      <Button fx:id="addModule" layoutX="350.0" layoutY="535.0" mnemonicParsing="false" onAction="#addModule" prefHeight="45.0" prefWidth="110.0" text="Add Module" />
      <Button fx:id="addCourse" layoutX="475.0" layoutY="535.0" mnemonicParsing="false" onAction="#addCourse" prefHeight="45.0" prefWidth="110.0" text="Add Course" />
      <Button fx:id="addProfessor" layoutX="605.0" layoutY="535.0" mnemonicParsing="false" onAction="#addProfessor" prefHeight="45.0" prefWidth="110.0" text="Add Professor" />
      <Button fx:id="addStudent" layoutX="725.0" layoutY="535.0" mnemonicParsing="false" onAction="#addStudent" prefHeight="45.0" prefWidth="110.0" text="Add Student" />
      <PieChart fx:id="summaryPie" layoutX="14.0" layoutY="80.0" />
   </children>
</AnchorPane>
